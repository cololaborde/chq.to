<%= form_with(model: form.object, local: true) do |f| %>
  <% if form.object.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(form.object.errors.count, "error") %> impidi√≥ que el link pueda ser guardado:</h2>

      <ul>
        <% form.object.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'links/form_fields', form: f %>

  <% case @type %>
  <% when 'TemporalLink' %>
    <%= render 'temporal_links/temporal_fields', form: f %>
  <% when 'PrivateLink' %>
    <%= render 'private_links/private_fields', form: f %>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>
